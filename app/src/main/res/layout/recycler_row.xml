<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DAC5F4"
    android:orientation="vertical">


    <TextView
        android:id="@+id/recyclerViewTitleText"
        android:layout_width="400dp"
        android:layout_height="47dp"
        android:layout_margin="2dp"
        android:text="Title"
        android:textColor="#DA4949"
        android:textSize="20sp">

    </TextView>


    <ImageView
        android:id="@+id/recyclerViewImageView"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter">


    </ImageView>

    <TextView
        android:id="@+id/recyclerViewUserDescriptionText"
        android:layout_width="398dp"
        android:layout_height="65dp"
        android:layout_margin="5dp"
        android:text="Description"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:id="@+id/recyclerViewUserEmailText"
        android:layout_width="399dp"
        android:layout_height="38dp"
        android:layout_margin="5dp"
        android:text="Email"
        android:textSize="10sp">

    </TextView>

    <TextView
        android:id="@+id/recyclerViewUserSalaryText"
        android:layout_width="401dp"
        android:layout_height="57dp"
        android:layout_margin="5dp"
        android:text="Salary"
        android:textColor="#24FD29"
        android:textSize="20sp">

    </TextView>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg"
        android:onClick="deleteData"
        android:text="Take It" />


</LinearLayout>